{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "HVM",
	"patterns": [
		{"include": "#comments"},
		{"include": "#strings"},
		{"include": "#keywords"},
		{"include": "#constructors"},
		{"include": "#operators"},
		{"include": "#numerals"},
		{"include": "#characters"}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.hvm",
					"match": "\\b(let|dup)\\b"
				},
				{
					"name": "keyword.control.hvm",
					"match": "(@|Î»)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.hvm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.hvm",
					"match": "\\\\."
				}
			]
		},
		"characters": {
			"name": "string.quoted.single",
			"match": "'.'"
		},
		"numerals": {
			"patterns": [{
				"name": "constant.numeric.hvm",
				"match": "\\b[0-9]+\\b"
			}]
		},
		"constructors": {
			"patterns": [{
				"name": "entity.name.function.hvm",
				"match": "\\b[A-Z][\\w]*(\\.[\\w]*)*\\b"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.other.hvm",
				"match": "\\b[a-z][\\w]*\\b"
			}]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.equivalence.hvm",
					"match": "="
				},
				{
					"name": "keyword.operator.arithmetic.hvm",
					"match": "(\\+|-|\\*|/|%)"
				},
				{
					"name": "keyword.operator.bitwise.hvm",
					"match": "(&|\\||\\^|<<|>>)"
				},
				{
					"name": "keyword.operator.comparison.hvm",
					"match": "(<=|<|==|>=|>|!=)"
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash.hvm",
				"match": "//.*$"
			}]
		}
	},
	"scopeName": "source.hvm"
}
