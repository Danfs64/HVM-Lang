{
  "name": "hvm",
  "scopeName": "source.hvm",
  "fileTypes": [
    ".hvm2"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.hvm",
      "match": "\\b(let)\\b"
    },
    {
      "name": "string.quoted.double.hvm",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.hvm",
      "begin": "'",
      "end": "'"
    },
    {
      "name": "string.quoted.backtick.hvm",
      "begin": "`",
      "end": "`"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.hvm"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.hvm"
        }
      ]
    }
  }
}